<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/nav_menu_camera" />

    <ImageView
        android:id="@+id/button_photo"
        android:layout_width="@dimen/button_camera_width"
        android:layout_height="@dimen/button_camera_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:src="@drawable/selector_button_photo" />

    <ImageView
        android:id="@+id/button_video"
        android:layout_width="@dimen/button_camera_width"
        android:layout_height="@dimen/button_camera_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/selector_button_video" />

    <ImageView
        android:id="@+id/imageview_photo"
        android:layout_width="@dimen/photo_thumbnail_width"
        android:layout_height="@dimen/photo_thumbnail_width"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_placeholder_picture" />

    <VideoView
        android:id="@+id/videoview_film"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_thumbnail_height"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>
